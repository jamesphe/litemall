page{
  height: 100%;
}

.login-box {
  position:relative;
  width: 100%;
  height: 100%;
  padding: 0 40rpx;
  background: #fff;
}
.login-bg {
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  z-index:10;
}

.wx-login-btn {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  border-radius: 6rpx;
  width: 70%;
  color: #fff;
  border-radius: 50rpx;
  letter-spacing: 3rpx;
  position: absolute;
  z-index: 20;
  top: 55%;
  left: 15%;
}

.account-login-btn {
  position: absolute;
  width: 70%;
  color: #fff;
  font-size: 30rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 50rpx;
  letter-spacing: 3rpx;
  background-image: linear-gradient(to right, #9a9ba1 0%, #9a9ba1 100%);
  z-index: 20;
  top: 65%;
  left: 15%;
}
